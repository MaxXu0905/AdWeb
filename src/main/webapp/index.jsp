//         				}
//         			},
        			modal:true
        		});
        		$("#loginDialogAlert").hide();
        		
        		//常见问题
        		$("div#otherWindow").dialog({
        			autoOpen:false,
        			modal:true,
        			show:"blind",
        			hide:"puff",
        			resizable:false,
        			height:500,
        			width:800,
        			open:function(event,ui)
        			{
        				if($(this).data("operation")=="register")
        				{
        					$("#otherWindowUrl").load("authentic.jsp");
        					$("#otherWindowAcceptDiv").show();
        					
        					$('input:checkbox[name="acceptRadioGroup"]').click(function(event)
                			{
        						var accept = $('input:checkbox[name="acceptRadioGroup"]:checked').val();
        						if(accept)
        							$("#acceptAlert").hide(200);
                				$(this).data("accept",accept);			
                			});
        				}
        				else
        				{
        					$("#otherWindowUrl").load("question.jsp");
        					$("#otherWindowAcceptDiv").hide();
        				}
        			}
        		});
        		$("#acceptAlert").hide();

        		$("#oLoginBtn").click(function(){
            		$("div#loginDialog").dialog("open");
            		var username = $.cookie("username")||$.cookie("telephone");
            		if(username != null)
            			$("input#oEmail").val(username);
            		return false;
            	});
            	
    			$("#oRegisterBtn").click(function(){
    				register();
    				return false;
            	});
    			
    			$("#oQuestionBtn").click(function(){
    				$("div#otherWindow").dialog(
    	    				{
    	    					buttons:
    	    					{
    	    					    "关闭":function()
    	    					    {
    	    					    	$("div#otherWindow").dialog("close");
    	    					    }
    	    				   },
    	    				   title:"常见问题"
    	    				});
    				$("div#otherWindow").data("operation","question").dialog("open");
    				return false;
            	});
        	});
        	
        	function register()
        	{
        		$("div#loginDialog").dialog("close");
        		$("div#otherWindow").dialog(
        				{
        					buttons:
        					{
        						"开户认证":function()
    	    					   {
        							var accept = $('input:checkbox[name="acceptRadioGroup"]:checked').val();
        							if(accept == "accept" )
    	    					   		window.open("register.jsp");
        							else
        								$("#acceptAlert").show(100);
    	    					   },
        					    "取消":function()
        					    {
        					    	$("div#otherWindow").dialog("close");
        					    }
        				   },
        				   title:"开户认证"
        				});
        				$("div#otherWindow").data("operation","register").dialog("open");
        	}
        	
        	function login(event)
        	{
        		var form = $("#dialogForm");  
        		var _email = $("#oEmail").val().trim();
        		var _password = $("#oPassword").val();
        		var _data={name:_email,password:hex_md5(_password)};
        		
        		var form = $("#dialogForm");  
        		event.target.disabled = true;
        		$.ajax({  
        		    url:baseurl+form.attr('action'),  
        		    type:"POST", 
        		    data:JSON.stringify(_data),  
        		    dataType:"json", 
        		    success:function(data){ 
        		    	//$.cookie("username",_email,{ path: "/" });
        		    	adcakehref(data,event,"mainpage.jsp?pagetype=ADLIST");
        		    	event.target.disabled = false;
        		    },  
        		    error:function(){
        		    	alertify.alert('未知错误，请重新登录');
        		    	event.target.disabled = false;
        		    }  
        		});
        		
        	}
        	
        	

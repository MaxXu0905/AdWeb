       	 var baseurl = "<%="http://"+request.getServerName()+":"+request.getServerPort()+request.getContextPath()+"/"%>";
        	$(document).ready(function()
        	{
        		$("input,select,textarea").not("[type=submit]").jqBootstrapValidation({
